###############################################################################
# Makefile
###############################################################################

SHELL = /bin/bash

SRC = $(wildcard *.c *.cc *.cpp)
EXE = $(basename $(SRC))
ATT = $(EXE:=.att)

CFLAGS = -lm -Ofast -Wall -Wl,--no-as-needed
CXXFLAGS = $(CFLAGS) -std=c++0x
LDFLAGS = -lm -lrt -lpthread

###############################################################################

default: $(EXE)

all: default $(ATT)

clean:
	$(RM) -fv $(ATT) $(EXE) core.* *~

%.att: %
	objdump -C -D $< > $@

###############################################################################

.NOEXPORT:

###############################################################################
